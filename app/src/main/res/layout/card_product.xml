<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageView_cardProduct"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_account_circle" />
        <Button

            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_baseline_favorite_border"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnFavorite"
            android:layout_gravity="end"/>

    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/cardProduct_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá :"/>
            <TextView
                android:text="1000000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardProduct_price">
            </TextView>
            <TextView
                android:text="đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/cardProduct_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textSize="14sp" />

        <Button
            android:background="@drawable/bg_button_blue_conner_16"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/btnCardProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:textSize="12dp"/>

</LinearLayout>