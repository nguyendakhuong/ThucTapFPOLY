<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.AdminProductDetailActivity"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp">
    <TextView
        android:id="@+id/detail_admin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:textColor="@color/black"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/detail_admin_image"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sản phẩm:"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/detail_admin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="code"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/detail_admin_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số lượng"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả:"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/detail_admin_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="describe"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại:"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/detail_admin_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Ghi chú"
        android:gravity="center"/>
    <TextView
        android:id="@+id/detail_admin_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="note"
        android:textSize="16dp"
        android:minHeight="150dp"
        android:maxHeight="150dp"/>
    <Button
        android:id="@+id/detail_admin_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sửa"
        android:layout_gravity="end|bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>